<%= form_with model:@user do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :mobile %><br>
    <%= form.text_area :mobile %>
  </p>
   <p>
    <%= form.label :email%><br>
    <%= form.email_field :email %>
  </p>
  <p>
    <%= form.submit %>
  </p>

  <p>
  <%= form.label :status %><br>
  <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
</p>

<% end %>
